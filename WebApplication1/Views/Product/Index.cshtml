@model List<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <input type="hidden" value="@ViewBag.ProductCount" id="productCount"/>
    <div class="row" id="productList">
        @await Component.InvokeAsync("Product",3)
    </div>
    <div id="loadMoreBtn" class="row justify-content-center mt-5">
        <button class="btn-primary btn">Load More...</button>
    </div>
</div>

